to display table schema
show columns from <table>;

to display table
select * from <table>;



#to update 1 or many attribute in a table
UPDATE table_name SET column1 = value1, column2 = value2, ... WHERE condition; 

#to detete 1 or more entries
delete from table_name where condition;


#add column
ALTER TABLE table_name ADD column_name datatype; 

#modify column
alter table test modify name varchar(50);

#modify column name
alter table questionMatch rename column leftChoice3imagePath to leftChoice3ImagePath;

















